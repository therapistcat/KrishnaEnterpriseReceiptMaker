# Environment Variables for Receipt Maker Backend
# Copy this file to .env and fill in your actual values

# MongoDB Connection String
# For local development: mongodb://localhost:27017/receipt_maker
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/receipt_maker
MONGO_URI=mongodb://localhost:27017/receipt_maker

# Server Port (Render will set this automatically in production)
PORT=3000

# Node Environment
NODE_ENV=development
